{
  "parser" : "babel-eslint",
  "extends" : [ "eslint:recommended", "idiomatic", "plugin:react/recommended"],
  "plugins" : [ "react", "promise", "json" ],
  "env" : {
    "browser" : true,
    "node" : true,
    "es6" : true
  },

  "parserOptions" : {
    "ecmaFeatures" : {
      "modules" : true,
      "jsx" : true
    }
  },

  "rules" : {
    "react/no-unknown-property" : 0,
    "no-extra-boolean-cast" : 0,
    "no-multi-spaces" : 0
  }

}